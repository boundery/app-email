{
    "containers": {
        "postfix": {
            "expose": [ [ "25", "25" ] ],
            "networks": [ "post-spam" ],
            "hostname": "mail",
            "PUBDNS": [ "A:mail", "MX:mail:10" ],
            "env": [ "SMTP=1" ]
        },
        "spamassassin": {
            "networks": [ "post-spam", "spam-dove" ],
            "hostname": "spamassassin"
        },
        "dovecot": {
            "networks": [ "spam-dove", "private"],
            "hostname": "imap",
            "storagedirs": [ "/home/" ],
            "PRIVDNS": [ "imap" ]
        },
        "roundcube": {
            "networks": [ "private" ],
            "hostname": "webmail",
            "storagedirs": [ "/var/lib/dbconfig-common/sqlite3/roundcube/" ],
            "PRIVDNS": [ "webmail" ]
        },
        "submission": {
            "networks": [ "private" ],
            "hostname": "submission",
            "PRIVDNS": [ "submission" ],
            "env": [ "SUBMISSION=1" ],
            "reuse": "postfix"
        }
    }
}
